@{
	Layout = "~/Views/Shared/_MembershipLayout.cshtml";
	ViewData["Title"] = "Roles";
}
@section Scripts{
	<script src="~/ClientApp/Models/ClientPageInfo.js"></script>
	<script src="~/ClientApp/Models/ClientSearchFilter.js"></script>
	<script src="~/ClientApp/Models/ActiveState.js"></script>
	<script src="~/ClientApp/Pages/RoleIndex.js"></script>
	<script>
		var roleIndex = new RoleIndex();
	</script>
}

<h2>Roles</h2>
<hr />
@Html.AntiForgeryToken()
<div class="row">
	<div class="col-md-12">
		<div class="jsGrid_CustomHeader">
			<input id="active" name="active" type="radio" onclick="roleIndex.changeActiveState('active')" checked="checked" /><label>Active</label>
			<input id="inactive" name="inactive" type="radio" onclick="roleIndex.changeActiveState('inactive')" /><label>Inactive</label>
			<input id="both" name="both" type="radio" onclick="roleIndex.changeActiveState('both')" /><label>Both</label>
			<a asp-action="Create" id="create" name="create" class="btn btn-primary">Create New</a>
		</div>
		<div id="jsGrid"></div>
	</div>
</div>